@model ShippingAddress
@{
    var contextID = Guid.NewGuid().ToString();
}

<div id="view-shippingaddress-@contextID">

    <label for="@Html.NameFor(c => c.FirstName)" class="control-label">Full Name</label>
    <div class="row margin-5">
        <div class="col-xs-6">
            <div class="form-group">
                @Html.TextBoxFor(c => c.FirstName, true, htmlAttributes: new
                {
                    @class = "form-control",
                    placeholder = "First name",
                    data_role = "FirstName"
                })
            </div>
        </div>
        <div class="col-xs-6">
            <div class="form-group">
                @Html.TextBoxFor(c => c.LastName, true, htmlAttributes: new
                {
                    @class = "form-control",
                    placeholder = "Last name",
                    data_role = "LastName"
                })
            </div>
        </div>
    </div>

    @Html.Partial("~/Views/Shared/EditorTemplates/Address.cshtml", Model)

    <div class="form-group">
        @Html.LabelFor(c => c.Email, new { @class = "control-label" })
        @Html.TextBoxFor(c => c.Email, true, htmlAttributes: new
                {
                    @class = "form-control",
                    placeholder = "Email",
                    data_role = "Email"
                })
    </div>

    <div class="form-group">
        @Html.LabelFor(c => c.Phone, new { @class = "control-label" })
        @Html.TextBoxFor(c => c.Phone, true, htmlAttributes: new
                {
                    @class = "form-control",
                    placeholder = "Phone",
                    data_role = "Phone"
                })
    </div>

</div>
